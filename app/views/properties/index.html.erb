<p id="notice"><%= notice %></p>

<h1>Listing Properties</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>category</th>
      <th>Price</th>
      <th>Address</th>
      <th>Address1</th>
      <th>City</th>
      <th>State</th>
      <th>Description</th>
      <th>image</th>
      <th colspan="3"></th>
      <th rowspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.category %></td>
        <td><%= property.price %></td>
        <td><%= property.address %></td>
        <td><%= property.address1 %></td>
        <td><%= property.city %></td>
        <td><%= property.state %></td>
        <td><%= property.description %></td>
        td><%= property.image %></td>
        <td> 
        <button type="button" class="btn btn-success">
        <%= link_to 'Show', property %></td>
        </button>
        <td>
        <button type="button" class="btn btn-success">
        <%= link_to 'Edit', edit_property_path(property) %>
         </button>
        </td>
        <td>
        <button type="button" class="btn btn-success">
        <%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %>
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button" class="btn btn-success">
<%= link_to 'New Property', new_property_path %>
</button>